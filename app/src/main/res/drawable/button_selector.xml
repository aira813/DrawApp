<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 選択時 -->
    <item android:state_checked="true" android:shape="rectangle">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/main3"/>
            <size
                android:height="@dimen/menu_size"
                android:width="@dimen/menu_size"/>
        </shape>
    </item>

    <!-- 未選択時 -->
    <item android:state_checked="false" android:shape="rectangle">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <size
                android:height="@dimen/menu_size"
                android:width="@dimen/menu_size"/>
        </shape>
    </item>
</selector>  